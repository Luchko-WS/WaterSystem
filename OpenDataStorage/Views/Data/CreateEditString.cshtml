<div class="modal-window">
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.cancel()"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="modalTitle">
            {{vm.model.mode == 'edit' ? "@Lexicon.EditValue" : "@Lexicon.CreateValue"}}
        </h4>
    </div>
    <form name="_form">
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-md-3">@Lexicon.Value</label>
                    <div class="col-md-9">
                        <input class="form-control" ng-model="vm.model.value.value" ng-required="true" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">@Lexicon.SubjectOfMonitoring</label>
                    <div class="col-md-9">
                        <input class="form-control" type="text" ng-model="vm.model.value.subjectOfMonitoring" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">@Lexicon.Date</label>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">@Lexicon.IsValueForTimeInterval</label>
                    <div class="col-md-9">
                        <input class="checkbox" type="checkbox" ng-model="vm.model.value.isTimeIntervalValue" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">{{vm.model.value.isTimeIntervalValue ? '@Lexicon.From' : '@Lexicon.CreationDate'}}</label>
                    <div class="col-md-9">
                        <input class="form-control" type="date" max="{{vm.model.value.isTimeIntervalValue ? vm.model.value.endCreationDate : null | date:'yyyy-MM-dd'}}" ng-model="vm.model.value.creationDate" ng-required="vm.model.value.isTimeIntevalValue" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3" ng-if="vm.model.value.isTimeIntervalValue">@Lexicon.To</label>
                    <div class="col-md-9" ng-if="vm.model.value.isTimeIntervalValue">
                        <input class="form-control" type="date" min="{{vm.model.value.creationDate | date:'yyyy-MM-dd'}}" ng-model="vm.model.value.endCreationDate" ng-required="vm.model.value.isTimeIntervalValue" />
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-window-custom-footer">
            <button class="btn btn-primary" ng-disabled="_form.$invalid" ng-click="vm.save()">@Lexicon.Save</button>
            <button class="btn btn-default" ng-click="vm.cancel()">@Lexicon.Cancel</button>
        </div>
    </form>
</div>
